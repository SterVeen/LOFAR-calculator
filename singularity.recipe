Bootstrap: docker
From: ubuntu:18.04

%post
   export DEBIAN_FRONTEND=noninteractive
   # Install common dependencies
   apt-get update
   apt-get --yes install --no-install-recommends \
      python3-dev \
      python3-pip \
      python3-setuptools
   pip3 install \
      dash \
      dash-bootstrap-components \
      numpy \
      astroquery \
      astropy \
      fpdf \
      ephem \
      matplotlib
